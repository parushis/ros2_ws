<?xml version="1.0"?>
<sdf version="1.7">
  <model name="simple_arm">
    <static>false</static>

    <!-- Base link -->
    <link name="base_link">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Shoulder link -->
    <link name="link1">
      <pose>0 0 0.1 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="link1_visual">
        <geometry>
          <box>
            <size>0.05 0.05 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.4 0.2 1</ambient>
          <diffuse>0.8 0.4 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="link1_collision">
        <geometry>
          <box>
            <size>0.05 0.05 0.3</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Elbow link -->
    <link name="link2">
      <pose>0 0 0.25 0 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0.0</iyz>
          <izz>0.0005</izz>
        </inertia>
      </inertial>
      <visual name="link2_visual">
        <geometry>
          <box>
            <size>0.04 0.04 0.25</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.8 0.4 1</ambient>
          <diffuse>0.2 0.8 0.4 1</diffuse>
        </material>
      </visual>
      <collision name="link2_collision">
        <geometry>
          <box>
            <size>0.04 0.04 0.25</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Shoulder joint -->
    <joint name="joint1" type="revolute">
      <parent>base_link</parent>
      <child>link1</child>
      <pose>0 0 0.05 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <!-- Elbow joint -->
    <joint name="joint2" type="revolute">
      <parent>link1</parent>
      <child>link2</child>
      <pose>0 0 0.3 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>
  </model>
</sdf>
